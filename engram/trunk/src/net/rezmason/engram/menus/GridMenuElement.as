package net.rezmason.engram.menus {	// IMPORT STATEMENTS		import flash.display.DisplayObject;	import flash.filters.GlowFilter;		import net.rezmason.display.ColorSprite;	internal final class GridMenuElement extends ColorSprite {				// INSTANCE PROPERTIES		private var _content:DisplayObject;		private var _mark:DisplayObject;						public function GridMenuElement(mark:DisplayObject) {			_mark = mark;			_mark.filters = [new GlowFilter(0xFFFFFF, 1, 6, 6, 2, 1)];			addColorChild(_mark, 1);		}				// GETTERS & SETTERS				internal function get content():DisplayObject {			return _content;		}				internal function set content(value:DisplayObject):void {			if (_content && _content.parent == this) {				removeChild(_content);			}						_content = value;			addChild(_content);			if (contains(_mark)) {				addChild(_mark);			}		}				// INTERNAL METHODS				internal function showMark():void {			addChild(_mark);		}				internal function hideMark():void {			removeChild(_mark);		}	}}