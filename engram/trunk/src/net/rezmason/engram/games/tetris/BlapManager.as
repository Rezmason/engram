package net.rezmason.engram.games.tetris {		// IMPORT STATEMENTS	import flash.display.MovieClip;		import net.rezmason.display.ColorSprite;	import net.rezmason.utils.Hat;		public final class BlapManager extends ColorSprite {				// INSTANCE PROPERTIES		private const BLAPS:Array = [new Blap1, new Blap2, new Blap3, new Blap4, new Blap5, new Blap6, new Blap7, new Blap8];		private var currentBlap:MovieClip;		private var blapMover:BlapMover = new BlapMover;		private var _hat:Hat = new Hat();		// CONSTRUCTOR		public function BlapManager():void {			var ike:int;						for (ike = 0; ike < BLAPS.length; ike += 1) {				addColorChild(BLAPS[ike].colorPlate, 1);				BLAPS[ike].stop();			}						_hat.reset(BLAPS.length);						addChild(blapMover);			blapMover.scaleX = blapMover.scaleY = 2;		}				// INTERNAL METHODS				internal function showBlap():void {			var ike:int;						if (currentBlap) {				currentBlap.stop();				blapMover.subject.removeChild(currentBlap);			}			currentBlap = BLAPS[_hat.pick()];			blapMover.subject.addChild(currentBlap);			blapMover.gotoAndPlay(1);			currentBlap.gotoAndPlay(1);			for (ike = 0; ike < currentBlap.numChildren; ike += 1) {				if (currentBlap.getChildAt(ike) is MovieClip) {					(currentBlap.getChildAt(ike) as MovieClip).gotoAndPlay(1);				}			}		}	}}