package net.rezmason.engram.games.busybodhi {	// IMPORT STATEMETNS	import flash.display.Sprite;		import net.rezmason.display.Moment;	public class BeatSprite extends Sprite {				private var _shine:Moment;				public function BeatSprite(type:String):void {			createButton(type);			_shine = getChildByName("shine") as Moment;		}				internal function createButton(type:String):void {			var button:Sprite;						switch (type) {				case "a": button = new BeatButtonA; break;				case "b": button = new BeatButtonB; break;				case "x": button = new BeatButtonX; break;				case "y": button = new BeatButtonY; break;			}						addChild(button);		}				internal function light():void {			if (_shine.isPlaying) {				_shine.gotoAndPlay("continue");			} else {				_shine.play();			}		}	}}