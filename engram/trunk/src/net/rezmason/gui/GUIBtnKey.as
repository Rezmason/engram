package net.rezmason.gui {		// IMPORT STATEMENTS	import flash.display.BlendMode;	import flash.display.DisplayObject;	import flash.text.TextField;	import flash.geom.ColorTransform;		import net.rezmason.display.Moment;		public class GUIBtnKey extends GUIAbstract {				// INSTANCE PROPERTIES		public var value:String = "";		private var plainCT:ColorTransform = new ColorTransform;		private var darkCT:ColorTransform = new ColorTransform(0.2, 0.2, 0.2);		public var flag:Moment;				// CONSTRUCTOR		public function GUIBtnKey():void {						super(GUIAbstractEnforcer.INSTANCE);						TextField;						expectedChildren["back"] = DisplayObject;			expectedChildren["darkener"] = DisplayObject;			verifyChildren(this);						buttonMode = true;			useHandCursor = true;			textArea.mouseEnabled = false;						darkener.blendMode = BlendMode.DARKEN;						addColorChild(getChildByName("back"), 1);		}				// GETTERS & SETTERS				public function get text():String {			return textArea.text;		}				public function set text(str:String):void {			textArea.text = str;		}				// PUBLIC METHODS				public function triggerFlag():void {			flag.play();		}				public function wait():void {			darkener.transform.colorTransform = darkCT;		}				public function reset():void {			darkener.transform.colorTransform = plainCT;		}	}}