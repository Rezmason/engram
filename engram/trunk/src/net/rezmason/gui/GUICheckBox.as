package net.rezmason.gui {		// IMPORT STATEMENTS	import flash.display.DisplayObject;	import flash.display.DisplayObjectContainer;	import flash.display.InteractiveObject;	import flash.events.Event;	import flash.events.MouseEvent;		public class GUICheckBox extends GUIAbstract {				// INSTANCE PROPERTIES		private var _state:Boolean = false;		private var _check:DisplayObject;						public function GUICheckBox():void {						super(GUIAbstractEnforcer.INSTANCE);						expectedChildren["falseState"] = DisplayObjectContainer;			expectedChildren["trueState"] = DisplayObjectContainer;			expectedChildren["check"] = DisplayObject;			verifyChildren(this);						_check = getChildByName("check");						buttonMode = true;			useHandCursor = true;			state = false;			addEventListener(MouseEvent.CLICK, toggle);						addColorChild(_check, 1);						if (_check is InteractiveObject) {				(_check as InteractiveObject).mouseEnabled = false;			}						(getChildByName("trueState") as DisplayObjectContainer).addChild(_check);		}				// GETTERS & SETTERS				public function set state(value:Boolean):void {			_state = value;			getChildByName("trueState").visible = _state;			getChildByName("falseState").visible = !_state;		}				public function get state():Boolean {			return _state;		}				// PUBLIC METHODS				public function toggle(event:Event = null):void {			state = !_state;		}	}}