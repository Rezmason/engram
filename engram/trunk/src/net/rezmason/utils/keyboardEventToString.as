package net.rezmason.utils {		// IMPORT STATEMENTS	import flash.events.KeyboardEvent;	import flash.ui.Keyboard;			public function keyboardEventToString(event:KeyboardEvent):String {		var char:String = String.fromCharCode(event.charCode).toUpperCase();		if (!char.match(/[a-zA-Z0-9`\\\/\[\]\=\-\.,;']/)) {			char = null;			switch (event.keyCode) {				case Keyboard.DOWN:					char = "DOWN";				break;				case Keyboard.LEFT:					char = "LEFT";				break;				case Keyboard.RIGHT:					char = "RIGHT";				break;				case Keyboard.SHIFT:					char = "SHIFT";				break;				case Keyboard.SPACE:					char = "SPACE";				break;				case Keyboard.UP:					char = "UP";				break;				case Keyboard.ENTER:					char = "ENTER";				break;				case Keyboard.TAB:					char = "TAB";				break;				case Keyboard.ESCAPE:					char = "ESCAPE";				break;			}		}		return char;	}}