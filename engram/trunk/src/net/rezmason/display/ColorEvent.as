package net.rezmason.display {		// IMPORT STATEMENTS	import flash.events.Event;		/**	*	@private	*/	internal final class ColorEvent extends Event {				// CLASS PROPERTIES & CONSTANTS		internal static const SET_COLOR:String = "setColor";				// INSTANCE PROPERTIES		internal var pIndex:int = 0;		internal var colorTransforms:Array = [];						public function ColorEvent(t:String, b:Boolean = true, c:Boolean = false, 								   cts:Array = null, pi:int = 0):void {			super(t, b, c);			cts = cts || [];			colorTransforms = cts.slice();			pIndex = pi;		}				// PUBLIC METHODS				override public function clone():Event {			return new ColorEvent(type, bubbles, cancelable, colorTransforms, pIndex);		}			}}