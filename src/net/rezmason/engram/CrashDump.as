package net.rezmason.engram {		// IMPORT STATEMENTS	import flash.display.BlendMode;	import flash.display.Sprite;	import flash.geom.Rectangle;	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFieldType;	import flash.text.TextFormat;	import flash.text.Font;		import net.rezmason.engram.SettingsManager;	import net.rezmason.net.Syphon;	public final class CrashDump extends Sprite {				// INSTANCE PROPERTIES		private var settingsManager:SettingsManager;		private var _textField:TextField = new TextField();		public function CrashDump():void {						settingsManager = SettingsManager.INSTANCE;						with (_textField) {							var _format:TextFormat = defaultTextFormat;				_format.size = 9;				Syphon.registerFont("ProFont_9pt_st");				_format.font = "ProFont_9pt_st";								blendMode = BlendMode.LAYER;							autoSize = TextFieldAutoSize.LEFT;				background = false;				border = false;				defaultTextFormat = _format;				embedFonts = true;				mouseEnabled = false;				multiline = false;				textColor = 0xFFFFFF;				type = TextFieldType.DYNAMIC;			}						addChild(_textField);		}				public function set text(value:String):void {			_textField.text = value;			with (graphics) {				clear();				for (var ike:int = 0; ike < value.length; ike++) {					var rect:Rectangle = _textField.getCharBoundaries(ike);					if (rect) {						beginFill(0x000000);						var rand:Number = Math.random();						rect.x -= int(rand * 3);						rect.width += int(rand * 3) * 2;						rand = Math.random();						rect.y -= int(rand * 3);						rect.height += int(rand * 3) * 2;						drawRect(rect.x, rect.y, rect.width, rect.height);						endFill();					}				}			}		}				public function updateText():void {			text = settingsManager.coreDump;		}	}}