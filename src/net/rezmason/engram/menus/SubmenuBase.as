package net.rezmason.engram.menus {		// IMPORT STATEMENTS	import flash.events.Event;	import flash.geom.Rectangle;		import net.rezmason.display.ColorSprite;	import net.rezmason.events.HeavyEvent;	public class SubmenuBase extends ColorSprite {				// CLASS PROPERTIES		protected static const STAND_IN:Rectangle = new Rectangle(0, 0, 0, 0);						// INSTANCE PROPERTIES		protected var _settingsMenu:SettingsMenu;		protected var _command:HeavyEvent = new HeavyEvent(Event.COMPLETE);						public function SubmenuBase(__settingsMenu:SettingsMenu):void {			_settingsMenu = __settingsMenu;			reset();			addEventListener(Event.ADDED_TO_STAGE, prepare);			addEventListener(Event.REMOVED_FROM_STAGE, reset);						addSounds(this);		}				// GETTERS & SETTERS				internal final function get standIn():Rectangle {			return STAND_IN.clone();		}				internal function get description():String {			return "DESCRIPTION";		}				internal function get finished():Boolean {			return true;		}				// INTERNAL METHODS				internal function trigger(event:Event = null):void {					}				internal function rerez(ratio:Number = 1):void {					}				// PRIVATE & PROTECTED METHODS				protected function prepare(event:Event = null):void {					}				protected function reset(event:Event = null):void {					}				protected function signal(flavor:String = " "):void {			_command.flavor = flavor;			dispatchEvent(_command);		}	}}