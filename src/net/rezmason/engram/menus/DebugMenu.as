package net.rezmason.engram.menus {		// IMPORT STATEMENTS	import flash.events.Event;	import flash.events.MouseEvent;		import net.rezmason.engram.CommonEvents;		import com.robertpenner.easing.Quartic;	import gs.TweenLite;		public final class DebugMenu extends MenuBase {				// INSTANCE PROPERTIES		private var _blurb:String = "";						public function DebugMenu():void {						super(true, false);						buttonMap = {				btnCancel: CommonEvents.SHOW_LAST				}						mapButtons();						_defaultYes = null;			_defaultNo = btnCancel;		}				// GETTERS & SETTERS				public function set blurb(value:String):void {			_blurb = value.toUpperCase();			txtDescription.text = _blurb;		}				// PUBLIC METHODS						// PRIVATE & PROTECTED METHODS						private function showDescription(event:Event):void {			txtDescription.text = "boop!";		}				private function hideDescription(event:Event):void {			txtDescription.text = _blurb;		}	}}