package net.rezmason.engram.menus {		// IMPORT STATEMENTS	import flash.display.Sprite;	import flash.text.TextField;		public final class ScoreboardEntry extends Sprite {				// CLASS PROPERTIES		private static const TAUNTS:Array = ["SOME DWEEB", "SHMOE", "PUDDIN TANG", "WHO CARES"];				// INSTANCE PROPERTIES		private var _name:String, _score:int, _rank:int;		private var dotString:String = ".........................";		private var scratchString:String;						public function ScoreboardEntry():void {						TextField;						name = "";			score = 0;		}				// GETTERS & SETTERS				override public function get name():String {			return textbox.text;		}				override public function set name(str:String):void {			_name = str;			if (Math.random() < 0.02) {				_name = TAUNTS[int(Math.random() * TAUNTS.length)];			}			remakeString();		}				public function get score():int {			return _score;		}				public function set score(i:int):void {			_score = i;			remakeString();		}				// PRIVATE METHODS		private function remakeString():void {			scratchString = _name + dotString.substr(0, dotString.length - _name.length - String(_score).length) + _score;			textbox.text = scratchString;		}	}}