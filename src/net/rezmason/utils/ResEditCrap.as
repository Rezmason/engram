package net.rezmason.utils {	/**	* 	Such a crappy class, it's not even worth Singletonizing it.	*	<p>If any of you are familiar with ResEdit, this class makes	*	strings that look like they were pulled out of an old gutted	*	Mac app from '96. Those were the days.</p>	* 	*	@author Jeremy Sachs	*	@langversion	ActionScript 3.0	*	@playerversion	Flash 9	*	@tiptext	*/	public final class ResEditCrap {				// CLASS PROPERTIES		private static var str:String;				// PUBLIC STATIC METHODS				/**		* Generates a string of ResEdit crap.		*		*	@param	size	The length of the generated string.		*	@param	inputStrings	A list of strings to randomly		*	include in the generated string.		*	@param	linelen	 Determines the length of a crap line.		*	Default is 0, which means it won't insert them.		*			*	@return	You guessed it- a string of ResEdit crap.		*			*/		public static function generate(size:int = 100, inputStrings:Array = null, linelen:int = 0):String {			str = "";			while (str.length < 300) {				addNoise();				if (Math.random() > 0.5) {					addCarats();				} else {					addNumbers();				}			}			addStrings();			addStrings(6, inputStrings);			str = "joy!peff^" + str;						if (linelen) {				var ike:int = 0;				while (ike * linelen < str.length) {					str = str.substr(0, ike * linelen) + "\n" + str.substr(ike * linelen);					ike++;				}				str = str.substr(1);				var lines:int = int(str.length / linelen);				str = str.substr(0, lines * linelen);			}						return str;		}				// PRIVATE STATIC METHODS		private static function addCarats():void {			str += new Array(int(Math.random() * 6)).join("^");		}				private static function addNumbers():void {			if (Math.random()>0.8) {				str+="#";			}			str += (Math.random() * 0xFFFFFF).toString(16);		}		private static function addStrings(smattering:int = 6, strs:Array = null):void {			strs ||= ["cfrg", "icl4", "actb", "icl8", "LDEF", "FOND", "ppat", "ROv#"];			for (var ike:int = 0; ike < smattering; ike++) {				var cut:int = Math.random() * str.length - 1;				str = str.substr(0, cut) + "^^" + strs[int(Math.random() * strs.length)] + str.substr(cut);			}		}		private static function addNoise(noiseAmt:int = -1):void {			if (noiseAmt == -1) {				noiseAmt = Math.random() * 20;			}			var baddies:Array = [0, 1, 2, 3, 4, 5, 6, 8, 9, 10, 11, 12, 13, 14, 15];			for (var ike:int = 0; ike < noiseAmt; ike++) {				var charPick:int = 0;				while (baddies.indexOf(charPick) != -1) {					charPick = Math.random() * 125;				}				//str = str.substr(0, cut) + String.fromCharCode(charPick) + str.substr(cut);				str += String.fromCharCode(charPick);			}		}	}}