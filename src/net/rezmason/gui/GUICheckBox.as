package net.rezmason.gui {		// IMPORT STATEMENTS	import flash.display.DisplayObject;	import flash.display.DisplayObjectContainer;	import flash.display.InteractiveObject;	import flash.events.Event;	import flash.events.MouseEvent;		public class GUICheckBox extends GUIAbstract {				// INSTANCE PROPERTIES		private var _value:Boolean = false;		private var _check:DisplayObject;				// CONSTRUCTOR		public function GUICheckBox():void {						super(GUIAbstractEnforcer.INSTANCE);						expectedChildren["falseState"] = DisplayObjectContainer;			expectedChildren["trueState"] = DisplayObjectContainer;			expectedChildren["check"] = DisplayObject;			verifyChildren(this);						_check = getChildByName("check");						buttonMode = true;			useHandCursor = true;			value = false;			addEventListener(MouseEvent.CLICK, toggle, false, 0, true);						addColorChild(_check, 1);						if (_check is InteractiveObject) {				(_check as InteractiveObject).mouseEnabled = false;			}						(getChildByName("trueState") as DisplayObjectContainer).addChild(_check);		}				// GETTERS & SETTERS				public function set value(b:Boolean):void {			_value = b;						getChildByName("trueState").visible = _value;			getChildByName("falseState").visible = !_value;		}				public function get value():Boolean {			return _value;		}				// PUBLIC METHODS				public function toggle(event:Event = null):void {			value = !value;		}	}}