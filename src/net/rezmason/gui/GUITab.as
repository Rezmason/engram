package net.rezmason.gui {		// IMPORT STATEMENTS	import flash.display.DisplayObject;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;		public class GUITab extends GUIOption {				// CLASS PROPERTIES		private static const PUSH_EVENT:GUIEvent = new GUIEvent(GUIEvent.RADIO_PUSH);				// INSTANCE PROPERTIES		private var _chosen:Boolean = false;		protected var _format:TextFormat;				// CONSTRUCTOR		public function GUITab():void {			expectedChildren["txtLabel"] = TextField;			expectedChildren["tabUpState"] = DisplayObject;			expectedChildren["tabDownState"] = DisplayObject;						super();						_downState = tabDownState;			_upState = tabUpState;						addColorChild(tabDownState);			addColorChild(tabUpState);			addColorChild(txtLabel);			chosen = false;		}				// GETTERS & SETTERS				public function get text():String {			return txtLabel.text;		}				public function set text(str:String):void {			txtLabel.text = str;		}				public function set textAlign(str:String):void {			_format.align = str;			txtLabel.defaultTextFormat = _format;			txtLabel.text = txtLabel.text;		}	}}