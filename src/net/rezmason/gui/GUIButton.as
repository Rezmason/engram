package net.rezmason.gui {		// IMPORT STATEMENTS	import flash.display.DisplayObject;	import flash.display.InteractiveObject;	import flash.display.SimpleButton;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.TextFormatAlign;		public class GUIButton extends GUIAbstract {				// INSTANCE PROPERTIES		protected var _format:TextFormat;						public function GUIButton():void {			var ike:int;						super(GUIAbstractEnforcer.INSTANCE);						expectedChildren["txtLabel"] = TextField;			expectedChildren["back"] = DisplayObject;			verifyChildren(this);						buttonMode = true;			useHandCursor = true;						for (ike = 0; ike < numChildren; ike += 1) {				if (getChildAt(ike) is InteractiveObject && !(getChildAt(ike) is SimpleButton)) {					(getChildAt(ike) as InteractiveObject).mouseEnabled = false;				}			}						_format = txtLabel.getTextFormat();						textAlign = TextFormatAlign.CENTER;						addColorChild(getChildByName("back"));		}				// GETTERS & SETTERS				public function get text():String {			return txtLabel.text;		}				public function set text(str:String):void {			txtLabel.text = str;		}				public function set textAlign(str:String):void {			_format.align = str;			txtLabel.defaultTextFormat = _format;			txtLabel.text = txtLabel.text;		}	}}