package net.rezmason.gui {		// IMPORT STATEMENTS	import flash.events.Event;		public class GUIEvent extends Event {				// CLASS PROPERTIES & CONSTANTS		public static const CLOSE_WINDOW:String = "closeWindow";		public static const MINIMIZE_WINDOW:String = "minimizeWindow";		public static const MAXIMIZE_WINDOW:String = "maximizeWindow";		public static const SUSPEND:String = "suspend";		public static const READY:String = "uiReady";		public static const REREZ:String = "rerez";		public static const INVOCATION:String = "invocation";		public static const FILE_DROP:String = "fileDrop";				private var _suspendImmediately:Boolean;		private var _position:Number = 0;		private var _fileArray:Array = [];						public function GUIEvent(t:String, b:Boolean = true, c:Boolean = false, pos:Number = 0, susp:Boolean = false):void {			super(t, b, c);			position = pos;			suspendImmediately = susp;		}				// GETTERS & SETTERS				public function get suspendImmediately():Boolean {			return _suspendImmediately;		}				public function set suspendImmediately(b:Boolean):void {			_suspendImmediately = b;		}				public function get position():Number {			return _position;		}				public function set position(value:Number):void {			_position = Math.min(1, Math.max(0, value));		}				public function get	fileArray():Array {			return _fileArray;		}				public function set fileArray(value:Array):void {			_fileArray = value.slice();		}				// PUBLIC METHODS				override public function clone():Event {			var returnVal:GUIEvent = new GUIEvent(type, bubbles, cancelable, _position, _suspendImmediately);			returnVal.fileArray = fileArray.slice();			return returnVal;		}			}}